# ==============================================
# CyberSentinel Bot Configuration (.env.example)
# ==============================================

# !!! WARNING: NEVER COMMIT REAL VALUES TO VERSION CONTROL !!!
# Copy this file to .env and fill the actual values

# =======================
# Core Bot Configuration
# =======================
DISCORD_BOT_TOKEN=your_discord_bot_token_here
BOT_PREFIX=!
BOT_STATUS=üõ°Ô∏è Protecting {guild_count} servers

# ================
# External APIs
# ================
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here
GOOGLE_SAFE_BROWSING_KEY=optional_google_api_key_here
SENTRY_DSN=optional_sentry_error_tracking_url

# ======================
# Database Configuration
# ======================
# SQLite (Development)
DATABASE_URL=sqlite:///database/security_bot.db

# PostgreSQL (Production Example)
# DATABASE_URL=postgresql://user:password@localhost:5432/cybersentinel

# =================
# Security Settings
# =================
# Protection Levels: 1 (Low), 2 (Medium), 3 (High)
DEFAULT_PROTECTION_LEVEL=2
MAX_DANGER_POINTS=10       # Auto-ban threshold
LINK_SCAN_TIMEOUT=30       # Seconds
ENCRYPTION_KEY=your_aes256_encryption_key_here

# ======================
# Anti-Spam & Rate Limits
# ======================
MAX_MESSAGES_PER_MINUTE=15     # Per user
RAID_DETECTION_THRESHOLD=5     # New members
RAID_DETECTION_WINDOW=120      # Seconds
CAPTCHA_TIMEOUT=300            # Seconds for verification

# ================
# Admin Settings
# ================
OWNER_ID=your_discord_user_id
ADMIN_ROLE_NAME=Cyber Admin
MODERATOR_ROLE_NAME=Cyber Moderator
REPORT_CHANNEL=security-reports

# ===================
# Logging & Monitoring
# ===================
LOG_LEVEL=INFO                  # DEBUG/INFO/WARNING/ERROR
LOG_FILE=logs/bot.log
LOG_RETENTION_DAYS=30

# ===================
# Backup & Maintenance
# ===================
BACKUP_INTERVAL=24h             # 24h/7d/30d
MAX_BACKUPS=30
AUTO_UPDATE_CHECK=true

# ==============
# Localization
# ==============
DEFAULT_LANGUAGE=en             # en/ar/fr/es
TRANSLATIONS_PATH=locales/

# =====================
# Advanced Threat Intel
# =====================
THREAT_FEED_URL=https://example.com/threats.json
AUTO_BLOCK_TOR_EXITS=true

# ====================
# Development Settings
# ====================
DEBUG_MODE=false
TEST_GUILD_ID=your_test_server_id